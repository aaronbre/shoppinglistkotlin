<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/standard_padding"
    tools:context="com.example.aaronbrecher.shoppinglist.activities.NewListActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_new_list_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_list_name_label">

        <EditText
            android:id="@+id/add_new_list_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/add_new_list_description_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_list_description_label">
    <EditText
        android:id="@+id/add_new_list_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
