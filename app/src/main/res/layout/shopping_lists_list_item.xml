<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/standard_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shopping_lists_text_main"
            style="@style/list_item_text_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Grocery List" />

        <TextView
            android:id="@+id/shopping_lists_text_secondary"
            style="@style/list_item_text_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="some text about the list will go here" />

    </LinearLayout>

    <TextView
        android:id="@+id/shopping_lists_text_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        tools:text="Feb 4 1988"/>

</LinearLayout>